    "react-blockies": "^1.4.0",
    "react-dom": "16.7.0-alpha.2",
    "react-helmet": "^5.2.0",
    "react-markdown": "^4.0.4",
    "react-minimal-pie-chart": "^3.3.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "shallowequal": "^1.1.0",
    "styled-components": "^4.1.1",
    "styled-media-query": "^2.1.1",
