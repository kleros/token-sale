    "dapp",
    "frontend",
    "ico"
  ],
  "repository": "https://github.com/kleros/continuous-ico-front",
  "author": "Kleros",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prettify": "kathari prettify",
    "lint:styled": "kathari lint:styled",
    "lint:js": "kathari lint:js --no-root",
    "lint": "yarn run lint:styled && yarn run lint:js",
    "test": "echo \"\"",
    "cz": "kathari cz",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "source-map-explorer build/static/js/main.*",
    "build:theme": "lessc --js ./src/styles/theme.less ./src/styles/theme.css"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "kathari precommit",
      "commit-msg": "kathari commitmsg"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@kleros/kathari": "^0.20.0",
    "husky": "^1.1.4",
